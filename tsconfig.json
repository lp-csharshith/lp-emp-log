{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",

    "moduleResolution": "bundler",
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,

    "allowJs": true,
    "types": ["node"],

    "paths": {
      "@/*": ["./*"]
    }
  }
}

 